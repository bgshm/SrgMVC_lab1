@model SrgDomain.Model.Department
@{
    ViewData["Title"] = "Створити департамент";
}
<h2>Створити департамент</h2>
<form asp-action="Create">
    <input type="hidden" asp-for="CreatedDate" value="@DateTime.Now" />
    <div class="form-group">
        <label asp-for="DepartmentName" class="control-label"></label>
        <input asp-for="DepartmentName" class="form-control" />
        <span asp-validation-for="DepartmentName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="ContactEmail" class="control-label"></label>
        <input asp-for="ContactEmail" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Створити" class="btn btn-primary" />
    </div>
</form>
<div>
    <a asp-action="Index">Назад до головної</a>
</div>

@model SrgDomain.Model.TaskHistory
@{
    ViewData["Title"] = "Delete Task History";
}
<h2>Delete Task History</h2>
<h3>Are you sure you want to delete this task history?</h3>
<div>
    <h4>Task History</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Action)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Action)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Timestamp)</dt>
        <dd class="col-sm-10">@Model.Timestamp.ToString("g")</dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Cancel</a>
    </form>
</div>

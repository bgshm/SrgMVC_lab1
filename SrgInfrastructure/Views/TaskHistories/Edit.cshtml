@model SrgDomain.Model.TaskHistory
@{
    ViewData["Title"] = "Edit Task History";
}
<h2>Edit Task History</h2>
<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Action" class="control-label"></label>
        <input asp-for="Action" class="form-control" />
        <span asp-validation-for="Action" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>
<div>
    <a asp-controller="Tasks" asp-action="Details" asp-route-id="@Model.TaskId">Back to Task</a>
</div>

@model SrgDomain.Model.Task
@{
    ViewData["Title"] = "Призначені до завдання учасники: " + Model.Title;
}

<h2>Призначені до завдання "@Model.Title" учасники</h2>

@if (Model.Members == null || !Model.Members.Any())
{
    <p>Жодний учасник не призначений до цього завдання.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Ім'я</th>
                <th>Роль</th>
                <th>Дії</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var member in Model.Members)
            {
                <tr>
                    <td>@member.Name</td>
                    <td>@member.Role</td>
                    <td>
                        <!-- Link to member details -->
                        <a class="btn btn-primary" asp-controller="Members" asp-action="Details" asp-route-id="@member.Id">Дані</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<p>
    <a class="btn btn-primary" asp-action="Details" asp-route-id="@Model.Id">Повернутися до даних завдання</a>
</p>

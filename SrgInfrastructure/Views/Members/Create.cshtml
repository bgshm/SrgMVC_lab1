@model SrgDomain.Model.Member
@{
    ViewData["Title"] = "Create Member";
    int managerId = (int)ViewBag.ManagerId;
}
<h2>Create Member</h2>
<form asp-action="Create">
    <input type="hidden" name="ManagerId" value="@managerId" />
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Role" class="control-label"></label>
        <input asp-for="Role" class="form-control" />
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TasksPerMonth" class="control-label"></label>
        <input asp-for="TasksPerMonth" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="TasksTotal" class="control-label"></label>
        <input asp-for="TasksTotal" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="LastTaskDate" class="control-label"></label>
        <input asp-for="LastTaskDate" class="form-control" type="datetime" />
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
<div>
    <a asp-controller="Managers" asp-action="Details" asp-route-id="@managerId">Back to Manager</a>
</div>

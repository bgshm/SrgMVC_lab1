@model SrgDomain.Model.Member
@{
    ViewData["Title"] = "Створити учасника";
    int managerId = (int)ViewBag.ManagerId;
}
<h2>Створити учасника</h2>
<form asp-action="Create" enctype="multipart/form-data">
    <input type="hidden" name="ManagerId" value="@managerId" />
    <input type="hidden" name="TasksPerMonth" value="0" />
    <input type="hidden" name="TasksTotal" value="0" />
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Role" class="control-label"></label>
        <input asp-for="Role" class="form-control" />
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StructuralUnit" class="form-label"></label>
        <input asp-for="StructuralUnit" class="form-control" />
        <span asp-validation-for="StructuralUnit" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EnrollmentYear" class="form-label"></label>
        <input asp-for="EnrollmentYear" type="number" min="2019" max="@DateTime.Now.Year"
               class="form-control" />
        <span asp-validation-for="EnrollmentYear" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Фото учасника</label>
        <input type="file" name="PhotoFile" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Створити" class="btn btn-primary" />
    </div>
</form>
<div>
    <a class="btn btn-primary" asp-controller="Managers" asp-action="Details" asp-route-id="@managerId">Назад до менеджера</a>
</div>

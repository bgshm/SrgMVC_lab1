@model SrgDomain.Model.Manager
@{
    ViewData["Title"] = "Редагувати менеджера";
}
<h2>Редагувати менеджера</h2>
@if (Model.PhotoPath != null)
{
    <div class="mb-3">
        @if (!string.IsNullOrEmpty(Model.PhotoPath))
        {
            <img class="card-img-top" src="@Model.PhotoPath" alt="@Model.Name" style="max-width:200px;" />
        }
        else
        {
            <img class="card-img-top" src="/img/default-manager.jpg" alt="No image" style="max-width:200px;" />
        }
    </div>
}
<form asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="DepartmentId" />
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StructuralUnit" class="form-label"></label>
        <input asp-for="StructuralUnit" class="form-control" />
        <span asp-validation-for="StructuralUnit" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EnrollmentYear" class="form-label"></label>
        <input asp-for="EnrollmentYear" type="number" min="2019" max="@DateTime.Now.Year"
               class="form-control" />
        <span asp-validation-for="EnrollmentYear" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Завантажити нове фото</label>
        <input type="file" name="PhotoFile" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Зберегти" class="btn btn-primary" />
    </div>
</form>
<div>
    <a class="btn btn-primary" asp-controller="Departments" asp-action="Details" asp-route-id="@Model.Department.Id">Назад до департаменту</a>
</div>

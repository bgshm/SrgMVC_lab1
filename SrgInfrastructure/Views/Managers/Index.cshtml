@model IEnumerable<SrgDomain.Model.Manager>
@{
    ViewData["Title"] = "Менеджери";
}
<h2>Менеджери</h2>
<p>
    <a asp-action="Create">Призначити нового менеджера</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Name)</th>
            <th>Департамент</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var manager in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => manager.Name)</td>
                <td>
                    <a asp-controller="Departments" asp-action="Details" asp-route-id="@manager.Department.Id">
                        @manager.Department.DepartmentName
                    </a>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@manager.Id">Дані</a> |
                    <a asp-action="Edit" asp-route-id="@manager.Id">Редагувати</a> |
                    <a asp-action="Delete" asp-route-id="@manager.Id">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>

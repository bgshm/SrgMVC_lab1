@model SrgDomain.Model.Manager
@{
    ViewData["Title"] = "Призначити менеджера";
    int departmentId = (int)ViewBag.DepartmentId;
}
<h2>Призначити менеджера</h2>
<form asp-action="Create">
    <input type="hidden" name="DepartmentId" value="@departmentId" />
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Створити" class="btn btn-primary" />
    </div>
</form>
<div>
    <a asp-controller="Departments" asp-action="Details" asp-route-id="@departmentId">Назад до департаменту</a>
</div>

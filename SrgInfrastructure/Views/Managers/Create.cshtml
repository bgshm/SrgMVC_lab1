@model SrgDomain.Model.Manager
@{
    ViewData["Title"] = "Призначити менеджера";
    int departmentId = (int)ViewBag.DepartmentId;
}
<h2>Призначити менеджера</h2>
<form asp-action="Create" enctype="multipart/form-data">
    <input type="hidden" name="DepartmentId" value="@departmentId" />
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StructuralUnit" class="form-label"></label>
        <input asp-for="StructuralUnit" class="form-control" />
        <span asp-validation-for="StructuralUnit" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EnrollmentYear" class="form-label"></label>
        <input asp-for="EnrollmentYear" type="number" min="2019" max="@DateTime.Now.Year"
               class="form-control" />
        <span asp-validation-for="EnrollmentYear" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Фото менеджера</label>
        <input type="file" name="PhotoFile" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Створити" class="btn btn-primary" />
    </div>
</form>
<div>
    <a class="btn btn-primary" asp-controller="Departments" asp-action="Details" asp-route-id="@departmentId">Назад до департаменту</a>
</div>

@model SrgDomain.Model.Manager
@{
    ViewData["Title"] = "Manager Details";
}
<h2>Manager Details</h2>
<div>
    <h4>Manager</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Name)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>
        <dt class="col-sm-2">Department</dt>
        <dd class="col-sm-10">
            <a asp-controller="Departments" asp-action="Details" asp-route-id="@Model.Department.Id">
                @Model.Department.DepartmentName
            </a>
        </dd>
    </dl>
</div>
<div>
    <h4>Members</h4>
    <p><a asp-controller="Members" asp-action="Create" asp-route-managerId="@Model.Id">Add Member</a></p>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var member in Model.Members)
            {
                <tr>
                    <td>@member.Name</td>
                    <td>@member.Role</td>
                    <td>
                        <a asp-controller="Members" asp-action="Details" asp-route-id="@member.Id">Details</a> |
                        <a asp-controller="Members" asp-action="Edit" asp-route-id="@member.Id">Edit</a> |
                        <a asp-controller="Members" asp-action="Delete" asp-route-id="@member.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <h4>Tasks</h4>
    <p><a asp-controller="Tasks" asp-action="Create" asp-route-managerId="@Model.Id">Add Task</a></p>
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Status</th>
                <th>Deadline</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var task in Model.Tasks)
            {
                <tr>
                    <td>@task.Title</td>
                    <td>@task.Status</td>
                    <td>@(task.Deadline.HasValue ? task.Deadline.Value.ToString("g") : "")</td>
                    <td>
                        <a asp-controller="Tasks" asp-action="Details" asp-route-id="@task.Id">Details</a> |
                        <a asp-controller="Tasks" asp-action="Edit" asp-route-id="@task.Id">Edit</a> |
                        <a asp-controller="Tasks" asp-action="Delete" asp-route-id="@task.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<p>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Delete" asp-route-id="@Model.Id">Delete</a> |
    <a asp-controller="Departments" asp-action="Details" asp-route-id="@Model.Department.Id">Back to Department</a>
</p>
